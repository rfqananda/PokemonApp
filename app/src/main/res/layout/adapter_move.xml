<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_list"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="32dp"
        android:elevation="0dp"
        android:outlineSpotShadowColor="@color/card_color2"
        app:cardBackgroundColor="@color/card_color2"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_pokemon"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:elevation="2dp"
        android:outlineProvider="none"
        android:src="@drawable/img_attack"
        app:layout_constraintBottom_toBottomOf="@id/card_list"
        app:layout_constraintStart_toStartOf="@id/card_list"
        app:layout_constraintTop_toTopOf="@id/card_list" />

    <TextView
        android:id="@+id/tv_name_move"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="10dp"
        android:elevation="2dp"
        android:ellipsize="end"
        android:fontFamily="@font/bold"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/card_list"
        app:layout_constraintEnd_toEndOf="@id/card_list"
        app:layout_constraintStart_toEndOf="@id/iv_pokemon"
        app:layout_constraintTop_toTopOf="@id/card_list"
        tools:text="Pikachu" />


</androidx.constraintlayout.widget.ConstraintLayout>